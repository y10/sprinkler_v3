{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "deviceIP",
            "type": "promptString",
            "description": "Enter device IP address",
            "default": "192.168.0.120"
        }
    ],
    "tasks": [
        {
            "label": "Prebuild HTML",
            "type": "shell",
            "command": "deno task build",
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "Prebuild HTML (Dev)",
            "type": "shell",
            "command": "deno task build:dev",
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "Compile ESP32",
            "type": "shell",
            "command": "deno task compile",
            "dependsOn": ["Prebuild HTML"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Upload OTA",
            "type": "shell",
            "command": "deno run --allow-read --allow-run upload.ts ${input:deviceIP}",
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "Publish OTA",
            "type": "shell",
            "command": "deno task build && deno task compile && deno run --allow-read --allow-run upload.ts ${input:deviceIP}",
            "problemMatcher": []
        }
    ]
}