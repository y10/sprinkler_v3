{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "deviceIP",
            "type": "promptString",
            "description": "Enter device IP address",
            "default": "192.168.1.248"
        }
    ],
    "tasks": [
        {
            "label": "Prebuild HTML",
            "type": "shell",
            "command": "deno task build"
        },
        {
            "label": "Prebuild HTML (Dev)",
            "type": "shell",
            "command": "deno task build:dev"
        },
        {
            "label": "Compile ESP32",
            "type": "shell",
            "command": "deno task compile",
            "dependsOn": ["Prebuild HTML"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Upload OTA",
            "type": "shell",
            "command": "deno run --allow-read --allow-run upload.ts ${input:deviceIP}",
            "dependsOn": ["Compile ESP32"]
        },
        {
            "label": "Postbuild",
            "type": "shell",
            "command": "publish",
            "dependsOn": ["Compile ESP32"]
        }
    ]
}